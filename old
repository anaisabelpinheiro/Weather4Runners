    let elements = document.querySelectorAll('.day');
      elements.forEach(function(dayElement, index) {
        let dayName = dayElement.innerHTML;
        dayElement.addEventListener('mouseenter', function() {
          dayElement.innerHTML = dayElement.getAttribute('temperature') + ' degrees ๐ฅ' ;
        });

        dayElement.addEventListener('mouseleave', function() {
          dayElement.innerHTML = dayName;
        });
      });